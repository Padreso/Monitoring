    <style type="text/css">
         table {
            color: #333;
            font-family: Helvetica, Arial, sans-serif;
            width: auto;
            border-collapse: collapse;
            border-spacing: 0;
        }

        td, th {
            border: 1px solid transparent; /* No more visible border */
            height: 30px;
            transition: all 0.3s; /* Simple transition for hover effect */
            padding-left: 10px;
            padding-right: 10px;
        }

        th {
            background: #DFDFDF; /* Darken header a bit */
            font-weight: bold;
        }

        td {
            background: #FAFAFA;
            text-align: center;
        }

        /* Cells in even rows (2,4,6...) are one color */
        tr:nth-child(even) td {
            background: #F1F1F1;
        }

        /* Cells in odd rows (1,3,5...) are another (excludes header cells) */
        tr:nth-child(odd) td {
            background: #FEFEFE;
        }

        /* Hover cell effect! */
        tr td:hover {
            background: #666;
            color: #FFF;
        }

        .alertRow {
            background: #ff0000 !important;
            color: #ffffff !important;
        }

        div.hidden {
            /*display: none;*/
            visibility: hidden;
        }

        #containment-wrapper {
            margin-left: 10px;
            min-height: 500px;
            min-width: 300px;
            width: 80%;
            height: 100%;
            padding: 10px 10px 10px;
        }

        /*#separator {
